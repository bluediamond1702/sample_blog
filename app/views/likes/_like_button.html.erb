<% if like = current_user.likes.find_by(micropost_id: micropost.id) %>
  <%= form_for [like.micropost, like], method: :delete, remote: true do |f| %>
    <%= f.hidden_field :micropost_id %>
    <%= f.hidden_field :user_id %>
    <%= f.submit "Liked", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= form_for Like.new, url: micropost_likes_path(micropost.id), remote: true do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :micropost_id %>
    <%= f.submit "Like", class: "btn btn-primary" %>
  <% end %>
<% end %>
